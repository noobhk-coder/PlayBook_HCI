<div class="container">
    <ul class="collection with-header">
        <li class="collection-header">
            <h1>My Events</h1>
        </li>

        {{#each y}}
        <li class="collection-item">
            <p><span>Category:</span> {{this.sport}}</p>
            <p>Date: {{this.date}}</p>
            <p>Location: {{this.location}} </p>
            
            {{#each this.playersList}}
            <form method="POST" action="/join">
                <p style="font-size:1.5rem;">Player Lists : </h2>
                    <p>Email id: {{this.email}}</p>
                    
                    <input id='eventId' type="hidden" name="eventId" value="{{this.cid}}" />

                    <button class="btn waves-effect waves-light" type="submit" name="submit" value={{this.email}}>Remove
                        <i class="material-icons right">send</i>
                    </button>

                    {{/each}}
            </form>

        </li>
        {{/each}}

    </ul>
</div>

<div class="container">
    <ul class="collection with-header">
        <li class="collection-header">
            <h1>Events Joined</h1>
        </li>

        {{#each z}}
        <li class="collection-item">
            <p><span>Category:</span> {{this.sport}}</p>
            <p>Date: {{this.date}}</p>
            <p>Location: {{this.location}} </p>
            <p>Created By: {{this.creatorEmail}} </p>
        </li>
        {{/each}}

    </ul>
</div>


<div class="container">

    <p style="font-size:1.5rem">Other Events</p>
    <div class="row">
        {{#each x}}
        <div class="col s12 m4">
            <div class="card medium hoverable  #263238 blue-grey darken-4">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator responsive-img" alt="image"
                        src="https://sportsnaut.com/wp-content/uploads/2017/09/0-2.jpg">
                </div>

                <div class="card-content">
                    <span style="" class="card-title activator  #eceff1 blue-grey-text text-lighten-5">Category:
                        {{this.sport}}</span>
                    <p style="" class="#eceff1 blue-grey-text text-lighten-5">Created By: {{{this.creator}}}</p>
                    <div class="card-action">
                        {{!-- <button href="">Join This game</a> --}}
                        <form method="POST" action="myGames">
                            <button class="btn waves-effect waves-light" type="submit" name="submit"
                                value={{this._id}}>Join Event
                                <i class="material-icons right">send</i>
                            </button>
                        </form>
                    </div>



                </div>

                <div class="card-reveal #263238 blue-grey darken-4">
                    <span class="card-title #ffab40 orange-text text-accent-2">Created By: {{{this.creator}}}<i
                            class="material-icons right">close</i></span>
                    <p style="" class="#eceff1 blue-grey-text text-lighten-5">Date: {{{this.date}}}</p>
                    <p style="" class="#eceff1 blue-grey-text text-lighten-5">Time: {{{this.time}}}</p>
                    <p style="" class="#eceff1 blue-grey-text text-lighten-5">Location: {{{this.location}}}</p>
                    <p style="" class="#eceff1 blue-grey-text text-lighten-5">Ground Name: {{{this.groundName}}}</p>
                    <p style="" class="#eceff1 blue-grey-text text-lighten-5">Address: {{{this.address}}}</p>
                </div>




            </div>
        </div>
        {{/each}}
    </div>